<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hospital.model.scheduling.dao.SchedulingDao">

    <update id="updateCount" parameterType="java.lang.String">
        update scheduling
        set
        count = count - 1
        where id = #{id}
    </update>

    <update id="reset">
        update scheduling
        set
        count = count + 1
        where doctor_name = #{doctorName} and date = #{date} and time = #{time}
    </update>

    <select id="getPages" resultType="com.hospital.model.scheduling.pojo.entity.SchedulingEntity">
        select *
        from scheduling
        ${ew.customSqlSegment}
    </select>

</mapper>
